<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weatheria" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
<!--        <item name="android:searchViewStyle" >@style/searchMe</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomWeatheria" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    <!-- Primary brand color. -->
    <item name="colorPrimary" type="color">@color/primaryColor</item>
    <item name="colorPrimaryVariant" type="color" >@color/primaryDarkColor</item>
    <item name="colorOnPrimary" type="color">@color/primaryTextColor</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary" type="color">@color/primaryTextColor</item>
    <item name="colorSecondaryVariant" type="color">@color/secondaryDarkColor</item>
    <item name="colorOnSecondary" type="color">@color/black</item>
    <item name="colorOnSurface" type="color">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l" type="color">@color/primaryDarkColor</item>

    </style>

    <style name="searchMe" parent="Widget.AppCompat.SearchView">
        <item name="background">@color/black</item>
        <item name="backgroundTint">@color/primaryLightColor</item>
        <item name="backgroundColor">@color/purple_500</item>
        <item name="android:textColor">@color/purple_500</item>

    </style>
</resources>