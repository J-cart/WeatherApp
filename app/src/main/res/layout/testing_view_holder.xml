<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/currentCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
   android:layout_margin="14dp"
    app:cardElevation="50dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/currentWdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/currentWtempC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="temp in celcius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/currentWdate" />

        <TextView
            android:id="@+id/currentWcondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="condition"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/currentWtempC" />

        <TextView
            android:id="@+id/currentWtempF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="temp in fahrenheit"
            app:layout_constraintTop_toBottomOf="@id/currentWcondition" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

